<Window x:Class="Library.GUI.AdminWindowCRUD"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="AdminWindowCRUD" Height="623" Width="1224">
    <Window.Resources>
        <CollectionViewSource x:Key="EmployeesViewSource" Source="{Binding Employees}" />

        <!-- Style pour les boutons -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#517486"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#517486"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <!-- Effet au survol -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6287A4"/>
                    <Setter Property="BorderBrush" Value="#6287A4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Menu à gauche -->
        <StackPanel Grid.Column="0" Background="#517486" Width="200">
            <TextBlock Text="Hello" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontSize="20" />

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Button Content="Gestion Livre" Grid.Row="0" Click="GestionLivre" Background="#517486" Foreground="White"
                BorderThickness="2" BorderBrush="White" Padding="8" Width="150" />

                <Button Content="Gestion Employé" Grid.Row="1" Click="GestionEmploye" Background="#517486" Foreground="White"
                BorderThickness="2" BorderBrush="White" Padding="8" Width="150" />
            </Grid>
        </StackPanel>

        <!-- Grille principale avec deux lignes -->
        <Grid Grid.Column="1" Margin="10"  >
            <Grid.RowDefinitions>
                <!-- Ligne pour la partie supérieure avec le DataGrid -->
                <RowDefinition Height="*" />
                <!-- Ligne pour la partie inférieure avec les inputs et les boutons -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Partie supérieure -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="Employees's Data" Margin="0,0,0,10" FontSize="20" FontWeight="Bold" />
                <!-- Conteneur ScrollViewer pour rendre la liste scrollable -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListView x:Name="employeesListView" ItemsSource="{Binding Source={StaticResource EmployeesViewSource}}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Path=Nom}" />
                                <GridViewColumn Header="Prénom" DisplayMemberBinding="{Binding Path=Prenom}" />
                                <GridViewColumn Header="Adresse e-mail" DisplayMemberBinding="{Binding Path=AdresseEmail}" />
                                <GridViewColumn Header="Identifiant" DisplayMemberBinding="{Binding Path=Identifiant}" />
                                <GridViewColumn Header="Mot de passe" DisplayMemberBinding="{Binding Path=MotDePasse}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>
            </StackPanel>
            <!-- Partie inférieure -->
            <StackPanel Grid.Row="1" Margin="0,10" VerticalAlignment="Bottom">
                <!-- Inputs et boutons -->
                <StackPanel Margin="0,10">
                    <TextBlock Text="Nom :" Margin="0,0,0,5" />
                    <TextBox x:Name="nomTextBox" Margin="0,0,0,5" Text="{Binding SelectedItem.Nom, ElementName=employeesListView}" Width="200" TextChanged="nomTextBox_TextChanged" />

                    <TextBlock Text="Prénom :" Margin="0,0,0,5" />
                    <TextBox x:Name="prenomTextBox" Margin="0,0,0,5" Text="{Binding SelectedItem.Prenom,ElementName=employeesListView}" Width="200" TextChanged="prenomTextBox_TextChanged" />

                    <TextBlock Text="Adresse e-mail :" Margin="0,0,0,5" />
                    <TextBox x:Name="emailTextBox" Margin="0,0,0,5" Text="{Binding SelectedItem.AdresseEmail,ElementName=employeesListView}" Width="200" TextChanged="emailTextBox_TextChanged" />

                    <TextBlock Text="Identifiant :" Margin="0,0,0,5" />
                    <TextBox x:Name="identifiantTextBox" Margin="0,0,0,5" Text="{Binding SelectedItem.Identifiant,ElementName=employeesListView}" Width="200" TextChanged="identifiantTextBox_TextChanged" />

                    <TextBlock Text="Mot de passe :" Margin="0,0,0,5" />
                    <TextBox x:Name="motDePasseTextBox" Margin="0,0,0,5" Text="{Binding SelectedItem.MotDePasse,ElementName=employeesListView}" Width="200" TextChanged="motDePasseTextBox_TextChanged" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Ajouter" Click="AjouterEmploye" />
                        <Button Content="Supprimer" Click="SupprimerEmploye" />
                        <Button Content="Modifier" Click="ModifierEmploye" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
