<Window x:Class="Library.GUI.FirstWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.GUI"
        mc:Ignorable="d"
        Title="FirstWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- En-tête avec le label indiquant le rôle -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10">
            <Label Content="Je me connecte en tant que..." FontSize="20" FontWeight="Bold" RenderTransformOrigin="0.475,1.777" Height="36" />
        </StackPanel>

        <!-- Cadres d'icônes avec boutons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <Border BorderBrush="#2689ac" BorderThickness="2" CornerRadius="10" Margin="5">
                    <Image Source="C:\Users\HP\Documents\4IIR\Dot_Net\LibraryApp\Library\GUI\images\adherentIcon.png" Width="150" Height="150" />
                </Border>
                <Button Content="Adherent" Margin="0,10" Click="AdherentRoleBtn_Click" Height="25" Width="78">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="ButtonBorder" Background="White" BorderBrush="#2689ac" BorderThickness="1" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Button.IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#2689ac"/>
                                    <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#2689ac"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
            <StackPanel>
                <Border BorderBrush="#2689ac" BorderThickness="2" CornerRadius="10" Margin="5">
                    <Image Source="C:\Users\HP\Documents\4IIR\Dot_Net\LibraryApp\Library\GUI\images\AdministratorIcon.jpg" Width="150" Height="150" />
                </Border>
                <Button Content="Admin" Margin="0,10" Click="AdminRolebtn_Click" Height="25" Width="78">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="ButtonBorder" Background="White" BorderBrush="#2689ac" BorderThickness="1" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Button.IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#2689ac"/>
                                    <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#2689ac"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
            <StackPanel>
                <Border BorderBrush="#2689ac" BorderThickness="2" CornerRadius="10" Margin="5">
                    <Image Source="C:\Users\HP\Documents\4IIR\Dot_Net\LibraryApp\Library\GUI\images\employee_img.jpg" Width="150" Height="150" />
                </Border>
                <Button Content="Employé" Margin="0,10" Click="EmployerRoleBtn_Click" Height="25" Width="78">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="ButtonBorder" Background="White" BorderBrush="#2689ac" BorderThickness="1" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Button.IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#2689ac"/>
                                    <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#2689ac"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>